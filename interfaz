    private void BotonSalirActionPerformed(java.awt.event.ActionEvent evt) {                                           

        System.exit(0);
    }                                          

    private void jButton6ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        atributo = Combo.getSelectedItem().toString();
        mostrarRegistros(buscar.getText());
    }                                        

    private void jButton5ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        int fila=tablaAlumnos.getSelectedRow();
        String valor = tablaAlumnos.getValueAt(fila, 0).toString();

        try {
            PreparedStatement pps=cn.prepareStatement("DELETE FROM alumnos WHERE Id='"+valor+"'");
            pps.executeUpdate();
            JOptionPane.showMessageDialog(null, "Registro Eliminado Correctamente");
            mostrarRegistros("");
        } catch (SQLException ex) {
            Logger.getLogger(Interfas_1.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //Actualizar Datos
        try {
            PreparedStatement pps = cn.prepareStatement("UPDATE alumnos SET Nombre='"+txtNombre.getText()+"', "
                + "ApellidoP='"+txtApellidoP.getText()+"', ApellidoM='"+txtApellidoM.getText()+"', "
                + "Edad='"+txtEdad.getText()+"', Correo='"+txtCorreo.getText()+"', Telefono='"+txttelefono.getText()+"' "
                + "WHERE Id='"+buscar.getText()+"'");
            pps.executeUpdate();

            JOptionPane.showMessageDialog(null, "Datos actualizados correctamente");

            Limpiar();
            mostrarRegistros("");
        } catch (SQLException ex) {
            Logger.getLogger(Interfas_1.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //Modificar Datos

        int fila = tablaAlumnos.getSelectedRow();
        if(fila>=0){
            buscar.setText(tablaAlumnos.getValueAt(fila, 0).toString());
            txtNombre.setText(tablaAlumnos.getValueAt(fila, 1).toString());
            txtApellidoP.setText(tablaAlumnos.getValueAt(fila, 2).toString());
            txtApellidoM.setText(tablaAlumnos.getValueAt(fila, 3).toString());
            txtEdad.setText(tablaAlumnos.getValueAt(fila, 4).toString());
            txtCorreo.setText(tablaAlumnos.getValueAt(fila, 5).toString());
            txttelefono.setText(tablaAlumnos.getValueAt(fila, 6).toString());
        }
        else{
            JOptionPane.showMessageDialog(null, " No se ha seleccionado ninguna fila ");
        }
    }                                        

    private void LimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        Limpiar();
    }                                       

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        //Insertar Datos a la tabla Alumnos
        try {
            PreparedStatement pps;
            pps = cn.prepareStatement ("INSERT alumnos(Nombre, ApellidoP, ApellidoM, Edad, Correo,telefono) VALUES(?, ?, ?, ?, ?, ?)");
            pps.setString(1, txtNombre.getText());
            pps.setString(2, txtApellidoP.getText());
            pps.setString(3, txtApellidoM.getText());
            pps.setString(4, txtEdad.getText());
            pps.setString(5, txtCorreo.getText());
            pps.setString(6, txttelefono.getText());
            pps.executeUpdate();

            JOptionPane.showMessageDialog(null, "Datos Guardados");
            mostrarRegistros("");
        } catch (SQLException ex) {
            Logger.getLogger(Interfas_1.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

